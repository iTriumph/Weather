    "background": {
        "page": "background.html",
        "persistent": true

    },
    "default_locale": "zh_CN",
    "name": "@Todo",
    "description": "__MSG_extension_description__",
    "homepage_url": "http://laoma.im",

    "permissions": ["tabs", "contextMenus", "http://*/*", "https://*/*"],
